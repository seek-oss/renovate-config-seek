{
  "name": "renovate-config-seek",
  "version": "0.0.0-development",
  "description": "Shareable Renovate config for SEEK",
  "main": "index.js",
  "scripts": {
    "test": "node test",
    "prepush": "npm test",
    "commit": "git-cz",
    "commitmsg": "commitlint --edit --extends seek",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seek-oss/renovate-config-seek.git"
  },
  "author": "SEEK",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/seek-oss/renovate-config-seek/issues"
  },
  "homepage": "https://github.com/seek-oss/renovate-config-seek#readme",
  "renovate-config": {
    "default": {
      "extends": [
        "config:base"
      ],
      "branchPrefix": "renovate--",
      "lockFileMaintenance": {
        "enabled": false
      },
      "rebaseStalePrs": true,
      "semanticCommits": true,
      "packageRules": [
        {
          "packagePatterns": [
            "*"
          ],
          "excludePackagePatterns": [
            "(^(@)?seek.*)|(.*-seek$)|(^sku.*)|(.*-sku$)"
          ],
          "enabled": false
        }
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^5.2.8",
    "commitizen": "^2.9.6",
    "commitlint-config-seek": "^1.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "renovate": "10.46.0",
    "semantic-release": "^11.0.2"
  }
}
