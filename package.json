{
  "name": "renovate-config-seek",
  "version": "0.0.0-development",
  "description": "Shareable Renovate config for SEEK",
  "main": "index.js",
  "scripts": {
    "test": "node test",
    "prepush": "npm test",
    "commit": "git-cz",
    "commitmsg": "commitlint --edit --extends seek",
    "release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seek-oss/renovate-config-seek.git"
  },
  "author": "SEEK",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/seek-oss/renovate-config-seek/issues"
  },
  "homepage": "https://github.com/seek-oss/renovate-config-seek#readme",
  "renovate-config": {
    "default": {
      "extends": [
        "config:base"
      ],
      "branchPrefix": "renovate--",
      "ignoreNpmrcFile": true,
      "lockFileMaintenance": {
        "enabled": false
      },
      "semanticCommits": false,
      "commitMessagePrefix": "{{semanticCommitType}}({{semanticCommitScope}}):",
      "commitMessageAction": "{{#if isPin}}Pin{{else}}{{#if isRollback}}Roll back{{else}}Update{{/if}}{{/if}}",
      "commitMessageExtra": "to {{#unless isRange}}v{{/unless}}{{#if isMajor}}{{newVersionMajor}}.x{{else}}{{newVersion}}{{/if}}",
      "packageRules": [
        {
          "packagePatterns": [
            "*"
          ],
          "excludePackagePatterns": [
            "(^(@seek\/|seek|sku|braid-design-system).*)(.*-(seek|sku|braid-design-system)(-.*|$))?"
          ],
          "enabled": false
        },
        {
          "depTypeList": [
            "dependencies"
          ],
          "rangeStrategy": "auto"
        },
        {
          "depTypeList": [
            "devDependencies"
          ],
          "rangeStrategy": "replace"
        },
        {
          "depTypeList": [
            "peerDependencies"
          ],
          "rangeStrategy": "widen"
        }
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "success": false
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "commitizen": "^4.1.2",
    "commitlint-config-seek": "^1.0.0",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^4.2.5",
    "renovate": "^19.231.4",
    "semantic-release": "^17.0.7"
  }
}
